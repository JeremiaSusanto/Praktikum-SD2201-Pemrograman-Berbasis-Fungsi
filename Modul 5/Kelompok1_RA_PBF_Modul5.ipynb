      "source": [
        "def temperature_converter(converter):\n",
        "    \"\"\"Decorator untuk menambahkan informasi konversi ke dalam fungsi.\"\"\"\n",
        "    def wrapper(temperature):\n",
        "        converted = converter(temperature)\n",
        "        print(f\"Hasil konversi: {converted:.2f} °\")\n",
        "    return wrapper\n"
      ]
    }
